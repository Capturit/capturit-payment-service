{
  "name": "capturit-payment-service",
  "version": "1.0.0",
  "description": "Stripe webhook handler for Capturit payment processing and project onboarding",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "prepare": "husky"
  },
  "keywords": [
    "stripe",
    "webhook",
    "payment",
    "capturit"
  ],
  "author": "Capturit Team",
  "license": "MIT",
  "dependencies": {
    "@capturit/shared": "link:../capturit-shared",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "stripe": "^14.25.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@eslint/js": "^9.39.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.8",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "3.5.3",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.3"
  }
}
